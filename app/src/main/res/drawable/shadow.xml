<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Тень -->
    <item>
        <shape>
            <solid android:color="#40000000" /> <!-- Цвет тени с прозрачностью -->
            <corners android:radius="16dp" /> <!-- Скругленные углы для тени -->
        </shape>
    </item>

    <!-- Основной фон -->
    <item android:bottom="3dp" android:left="3dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Основной цвет фона -->
            <corners android:radius="16dp" /> <!-- Скругленные углы для фона -->
        </shape>
    </item>
</layer-list>