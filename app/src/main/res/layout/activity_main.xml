<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/frame" />

    <LinearLayout
        android:layout_width="345dp"
        android:layout_height="362dp"
        android:background="#FBFBFB"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_background"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/acivity_main_titel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/login"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_field_edit_text"
            android:ems="10"
            android:hint="@string/activity_main_inn"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_field_edit_text"
            android:ems="10"
            android:hint="@string/activity_main_pass"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Switch
            android:id="@+id/phoneswitcher"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins"
            android:text="@string/activity_main_switcher"
            android:textColor="@color/black"
            android:trackTint="#B0B0B0" />

        <Button
            android:id="@+id/enterbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:backgroundTint="@color/greenui"
            android:fontFamily="@font/poppins"
            android:text="@string/activity_main_enter_button" />

        <Button
            android:id="@+id/eg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5sp"
            android:fontFamily="@font/poppins"
            android:backgroundTint="#BBBBBB"
            android:text="@string/activity_main_egov_button"
            android:textColor="@color/black"
            android:textColorLink="#E0CACA"
            app:strokeColor="#EDEDED" />

        <RadioGroup
            android:id="@+id/radiogr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/kz"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins"
                android:text="Қаз"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/ru"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:fontFamily="@font/poppins"
                android:text="Рус"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/en"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:text="Eng"
                android:textColor="@color/black" />
        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>